# Environment variables for Travel industry deployment

# Application name
APP_NAME=thl-sonic-concierge

# AWS Region
AWS_REGION=us-east-1

# Cognito settings
COGNITO_USER_POOL_NAME=thl-sonic-users
COGNITO_CLIENT_NAME=thl-sonic-client

# S3 bucket for frontend
S3_BUCKET_NAME=thl-sonic-frontend

# ECS settings
ECS_CLUSTER_NAME=thl-sonic-cluster
ECS_SERVICE_NAME=thl-sonic-service
ECS_TASK_FAMILY=thl-sonic-task
ECS_CONTAINER_NAME=thl-sonic-container

# DynamoDB tables
DYNAMODB_CUSTOMER_BOOKINGS_TABLE=thl_customer_bookings
DYNAMODB_VEHICLE_INFORMATION_TABLE=thl_vehicle_information
DYNAMODB_ACCOMMODATION_TABLE=thl_accommodation_options
DYNAMODB_NEARBY_SERVICES_TABLE=thl_nearby_services
DYNAMODB_APPLIANCE_TROUBLESHOOTING_TABLE=thl_appliance_troubleshooting

# Bedrock model settings
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_S2S_MODEL_ID=nova-sonic-s2s

# Frontend settings
FRONTEND_TITLE="THL Sonic Concierge"
FRONTEND_SUBTITLE="Your helpful travel companion"
FRONTEND_PRIMARY_COLOR="#0066CC"
FRONTEND_SECONDARY_COLOR="#FF9900"
FRONTEND_LOGO_PATH="customer-logo.jpg"
